### aliases
alias untar='tar -xvzf'
alias glol="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias glol2="git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all"

## Enable thefuck (https://github.com/nvbn/thefuck) 
# (to install thefuck: sudo -H pip install thefuck)
if [ -x /usr/local/bin/thefuck ] 
then
    eval "$(thefuck --alias)"
fi

### Docker
function docker-clean-images(){
	docker rmi $(docker images -q)
}

function docker-clean-containers(){
	docker rm $(docker ps -a -q)
}

function docker-clean-all(){
	docker rm $(docker ps -a -q)
	docker rmi $(docker images -q)
}

### Misc

function set-brightness(){
	if [ "$#" -ne 1 ]; then
		 echo "usage: $0 <value (0-1)>"
		 exit
	fi
	disp=$(xrandr -q | grep " connected"| cut -d" " -f1)
	xrandr --output $disp --brightness $1
}


